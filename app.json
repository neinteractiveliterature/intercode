{
  "name": "intercode",
  "scripts": {
    "postdeploy": "bin/rake db:migrate"
  },
  "env": {
    "LANG": {
      "required": true
    },
    "MANDRILL_APIKEY": {
      "required": true
    },
    "MANDRILL_USERNAME": {
      "required": true
    },
    "RACK_ENV": {
      "required": true
    },
    "RAILS_ENV": {
      "required": true
    },
    "RAILS_SERVE_STATIC_FILES": {
      "required": true
    },
    "SECRET_KEY_BASE": {
      "required": true
    }
  },
  "formation": {
  },
  "addons": [
