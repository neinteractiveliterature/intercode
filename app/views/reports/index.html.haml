%header
  %h1 Reports

.card.mt-4
  .card-header Regular reports
  .card-body
    %ul.mb-0
      %li= link_to 'Attendance by payment amount', reports_attendance_by_payment_amount_path
      %li= link_to "Event-provided #{convention.ticket_name.pluralize}", reports_event_provided_tickets_path
      %li= link_to 'Events by choice', reports_events_by_choice_path
      %li= link_to 'Signup spy', reports_signup_spy_path

.card.mt-4
  .card-header Printable reports
  .card-body
    %ul.mb-0
      %li= link_to 'Events by time', reports_events_by_time_path, target: '_blank'
      %li= link_to 'Per event report', reports_per_event_path, target: '_blank'
      %li= link_to 'Per room report', reports_per_room_path, target: '_blank'
      %li= link_to 'Per user report', reports_per_user_path, target: '_blank'
      %li= link_to 'Volunteer event signups', reports_volunteer_events_path, target: '_blank'
