<meta content="text/html; charset=UTF-8" http-equiv="Content-Type"/>
<title><%= page_title %></title>
<% if ENV['ASSETS_HOST'].present? -%>
  <script type="application/javascript">
    window.intercodeAssetsHost = <%=raw ENV['ASSETS_HOST'].to_json %>;
  </script>
<% end -%>
<%= javascript_include_tag url_with_possible_host('/packs/browser-warning.js', ENV['ASSETS_HOST']), defer: true %>
<%= javascript_include_tag url_with_possible_host('/packs/application.js', ENV['ASSETS_HOST']), defer: true, type: 'module' %>
<meta content="width=device-width, initial-scale=1" name="viewport"/>
<% if convention&.open_graph_image -%>
  <meta property="og:image" content="<%= convention.open_graph_image.url %>"/>
<% end -%>
<% if @event -%>
  <meta property="og:title" content="<%= @event.title %>"
  <meta property="og:description" content="<%= strip_tags @event.short_blurb %>">
<% elsif @page -%>
  <% if @page == convention&.root_page -%>
    <meta property="og:title" content="<%= @convention.name %>"/>
  <% else -%>
    <meta property="og:title" content="<%= @page.name %>"/>
  <% end -%>
<% else -%>
  <meta property="og:title" content="<%= page_title %>"/>
<% end -%>
<meta property="og:type" content="website"/>
<% if convention&.favicon -%>
  <link rel="icon" type="<%= convention.favicon.content_type %>" href="<%= convention.favicon.url %>">
<% end -%>
